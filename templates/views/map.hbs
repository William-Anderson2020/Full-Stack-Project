<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/css/map.css">
    <link rel="icon" href="/img/icon.png">
    <link href="https://fonts.googleapis.com/css?family=Lemonada|Sriracha&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Lato|Oxanium|Roboto&display=swap" rel="stylesheet">

    
       <title>Map of Game</title>

</head>
<body> 
    {{!-- OUTLINE
    
    Header/nav bar
    Map Tile set
    -insert chracter interactions like a visual novel- 
    Character profiles

     --}}
     
     

    <div class="container">

        <div class="map-dialogue-section">
            {{>header}} 
            {{>tiles}} 

            <div class = "dialogue">
                <img class="chibi" src="/img/characters/chibi/ephraim.png">
                 <div class="text">
                     " I won't falter! I am Ephraim, bringer of the light!"
                 </div>
            </div>

    
        </div>

      

        <section class= "party-section">
            
            <h2 class="party-header"> Party </h2>

            <div class= "character-cards">

                <img class="party-divider" src="/img/dividers/elegant-divider.png">
               
               
            
                
                        <div class="card-side character_front1">
                
                            <div class="info">
                
                
                                <div class="column1">
                
                                    <img class="character-portrait" src="/img/characters/icons/ephraim_portrait.gif">
                                    <div class="skills-btn">
                                        <div class="skills">1</div>
                                        <div class="skills">2</div>
                                        <div class="skills">3</div>
                                    </div>
                
                                </div>
                
                                <div class="column2">
                                    <div class="row">
                                        <div class="name btn"> 
                                            <img src="/img/card/decor_left_large.png" class="decor-left">
                                           Ephraim
                                            <img src="/img/card/decor_right_large.png" class="decor-right">
                                        </div>
                                                <div class="weapon btn">
                                                    <img src="/img/card/decor_left_large.png" class="decor-left">
                                                    Spear
                                                    <img src="/img/card/decor_right_large.png" class="decor-right">
                                                    </div>
                                    </div>
                
                                    <div class="row">
                                        <div class="btn hp">
                                            <img src="/img/card/decor_left_large.png" class="decor-left">
                                            19/19
                                            <img src="/img/card/decor_right_large.png" class="decor-right">
                                            
                                            </div>
                                        
                                    </div>
                
                                    <div class="row">
                                        <div class="stats btn">
                                            <img src="/img/card/diamond_large.png" class="stat-decor">
                                              <img src="/img/card/diamond_large.png" class="stat-decor2">

                                           <span class="stat-text atk">Atk <span class="atk-val value">1 </span> </span>     

                                           <span class="stat-text spd">Spd <span class="spd-val value">1 </span></span>
                                            
                                        </div>
                                        <div class="stats btn">
                                            <img src="/img/card/diamond_large.png" class="stat-decor">
                                            <img src="/img/card/diamond_large.png" class="stat-decor2">

                                            <span class="stat-text def">Def     <span class="def-val value">1 </span></span>
                                          
                                            <span class="stat-text">Res  <span class="res-val value">1 </span> </span>
                                            
                                        </div>
                                    </div>
                
                                </div>
                
                            </div>
                
                        </div>
             
        </section>

    </div>


    <section class="battle">

        <div="popup">
            <div class="character1">
                <img src="/img/characters/battle/Ep.png">
                <div class="battle-overlay"> Lucia deals 8 damage!</div>
                
             </div>

              <div class="character2">
             <img src="/img/characters/battle/Eir.png">
              <div>

    </section>


    <script src="/js/map.js"></script>
</body>



</html>

